# PayFlow Load Testing Environment Variables
# Copy this file to .env and configure for your environment

# ===========================================
# API Configuration
# ===========================================

# Default API URL (used when ENV not specified)
API_URL=http://localhost:3000
API_VERSION=v1

# Docker Local URL (when testing local Docker containers)
# DOCKER_LOCAL_URL=http://localhost:3000

# VPS URL (when testing Docker containers on VPS)
# VPS_URL=https://api.yourdomain.com

# ===========================================
# Test User Credentials
# ===========================================
#
# WARNING: Do not use these example credentials in production or staging environments.
# For sensitive environments, use a secrets manager (e.g., HashiCorp Vault, AWS Secrets Manager)
# or environment-specific CI/CD secrets.
#

# Primary test user (for authenticated tests)
TEST_USER_EMAIL=loadtest@example.com
TEST_USER_PASSWORD=LoadTest123!

# Secondary test user (for transfer tests)
TEST_USER_2_EMAIL=loadtest2@example.com
TEST_USER_2_PASSWORD=LoadTest123!

# ===========================================
# Test Configuration
# ===========================================

# Default virtual users
VUS=10

# Default test duration
DURATION=30s

# Default iterations
ITERATIONS=100

# ===========================================
# Performance Thresholds
# ===========================================

# p95 response time threshold (milliseconds)
THRESHOLD_P95_RESPONSE_TIME=1000

# p99 response time threshold (milliseconds)
THRESHOLD_P99_RESPONSE_TIME=2000

# Maximum acceptable error rate (0.01 = 1%)
THRESHOLD_ERROR_RATE=0.01

# ===========================================
# Soak Test Configuration
# ===========================================

# Duration for soak tests (e.g., 1h, 4h, 12h)
SOAK_DURATION=1h
